<style>
  .color-square {
    opacity: 0;
    transition: background-color 0.5s;
  }

  @keyframes fadeInGrid {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .fade-in {
    animation: fadeInGrid 0.3s forwards;
  }
</style>

<script>
  const squares = document.querySelectorAll(".color-square");
  const colors = ["bg-green1", "bg-green2", "bg-green3", "bg-green4", "bg-green5"];

  // Sequential fade-in
  squares.forEach((square, index) => {
    setTimeout(() => {
      square.classList.add("fade-in");
    }, index * 10); // 50ms stagger per square
  });

  function randomColor() {
    return colors[Math.floor(Math.random() * colors.length)];
  }

  function changeRandomSquare() {
    const square = squares[Math.floor(Math.random() * squares.length)];
    const oldColor = [...square.classList].find(c => c.startsWith("bg-green"));
    if (oldColor) square.classList.remove(oldColor);
    square.classList.add(randomColor());
  }

  // Start random color changes after fade-in finishes (~50ms * number of squares)
  setTimeout(() => {
    setInterval(changeRandomSquare, 150);
  }, squares.length * 50);
</script>

